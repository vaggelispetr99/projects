<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
      #content {
          display: block;
          overflow: hidden;
          resize: none;
      }
  </style>
  </head>
<body class="d-flex flex-column" style="min-height: 100vh; background-image: url('../public/images/grey-image.jpg'); background-size: cover;">
  <%- include("./partials/header.ejs") %>
      <div class="container d-flex flex-column" style="flex:1;">
        <h1 class="text-center display-4">Create Post</h1>
        <form action="/newpost" method="post">
            <div class="mb-3">
              <label for="title" class="form-label display-6">Title</label>
              <input type="text" class="form-control" id="title" name="title">
            </div>
            <div class="mb-3">
              <label for="content" class="form-label display-6">Content</label>
              <textarea class="form-control" id="content" rows="2" name="content" oninput="resizeTextarea()"></textarea>
            </div>
            <button type="submit" class="btn btn-dark">Submit</button>
          </form>
      </div>
      <%- include("./partials/footer.ejs") %>
      <script type="text/javascript">
        function resizeTextarea() {
        var textarea = document.getElementById("content"); 
        textarea.style.height = "auto";
        textarea.style.height = textarea.scrollHeight + "px";}
    
        document.addEventListener("DOMContentLoaded", function() { resizeTextarea();}); // Call resizeTextarea() when the DOM is fully loaded
    
    </script>
</body>
</html>